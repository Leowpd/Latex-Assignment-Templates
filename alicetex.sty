\newcommand{\mat}[1]{\left[\begin{matrix}#1\end{matrix}\right]}

\newcounter{matcols}
\newcommand{\augmatcols}[2]{%
  \setcounter{matcols}{#1}%
  \addtocounter{matcols}{-1}%
  \left[\begin{array}{@{}*{\value{matcols}}{c}|c@{}}#2\end{array}\right]%
}


